@model HomeOS.Cloud.Portal.MvcWebRole.Models.OrgInfo

@{
    ViewBag.Title = "Edit Orgs";
}

<h2>Edit Orgs</h2>

@using (Html.BeginForm()) {
     @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ETag)

    <fieldset>
        <legend>OrgInfo</legend>

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.OrgID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrgID)
        </div>
        <div class="editor-label">
            @Html.DisplayNameFor(model => model.OrgName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrgName)
        </div>
        <div class="editor-label">
            @Html.DisplayNameFor(model => model.OrgType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrgType)
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

