@model IEnumerable<HomeOS.Cloud.Portal.MvcWebRole.Models.OrgInfo>

@{
    ViewBag.Title = "HomeLab Organizations";
}

<h2>HomeLab Orgs</h2>

<p>
    @Html.ActionLink("Add New", "AddNew")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrgID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrgName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrgType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrgID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrgName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrgType)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { PartitionKey = item.PartitionKey, RowKey=item.RowKey }) 
            @Html.ActionLink("Edit", "Edit", new { PartitionKey = item.PartitionKey, RowKey=item.RowKey }) |
            @Html.ActionLink("Delete", "Delete", new { PartitionKey = item.PartitionKey, RowKey=item.RowKey  })
        </td>
    </tr>
}

</table>
